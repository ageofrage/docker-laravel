{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "each",
          "use",
          "return",
          "function",
          "if",
          "else",
          "else if",
          "forward",
          "for",
          "extend",
          "at-root",
          "debug"
        ]
      }
    ]
  }
}
